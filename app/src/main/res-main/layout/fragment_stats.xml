<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.papadatos.steve.hapi.StatsAndSettings.StatsFragment"
    android:background="@color/colorPrimary"
    android:clickable="true">

    <com.papadatos.steve.hapi.Utilities.CustomTypefaceTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/emotion_log_height"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="set reminders"
        android:textSize="40sp"
        app:customFont="@string/font_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/button_confirm"
        android:layout_below="@+id/title"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.papadatos.steve.hapi.Utilities.CustomTypefaceTextView
                android:id="@+id/button_start"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/small_button"
                app:customFont="@string/font_bold"
                android:text="@string/status_fragment_button_start" />

            <com.papadatos.steve.hapi.Utilities.CustomTypefaceTextView
                android:id="@+id/textview_start"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:textSize="24sp"
                app:customFont="@string/font_regular" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.papadatos.steve.hapi.Utilities.CustomTypefaceTextView
                android:id="@+id/button_end"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/small_button"
                app:customFont="@string/font_bold"
                android:text="@string/status_fragment_button_end" />

            <com.papadatos.steve.hapi.Utilities.CustomTypefaceTextView
                android:id="@+id/textview_end"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:textSize="24sp"
                app:customFont="@string/font_regular" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.papadatos.steve.hapi.Utilities.CustomTypefaceTextView
                android:id="@+id/button_amounts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                app:customFont="@string/font_bold"

                android:text="@string/status_fragment_spinner_amount" />

            <SeekBar
                android:id="@+id/seekbar_amount"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:inputType="number"
                android:max="4" />

        </LinearLayout>

    </LinearLayout>

    <com.papadatos.steve.hapi.Utilities.CustomTypefaceTextView
        android:id="@+id/button_confirm"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/emotion_log_shape"
        android:clickable="true"
        android:gravity="center"
        android:text="confirm"
        android:textSize="40sp"
        app:customFont="@string/font_bold" />


</RelativeLayout>
