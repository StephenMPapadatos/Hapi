<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.steve.hapi.Utilities.CustomTypefaceTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/emotion_log_height"
        android:text="@string/choose_emotion_fragment_textview_howudoin"
        android:textSize="40sp"
        android:gravity="center"
        app:customFont="@string/font_bold"
        android:layout_margin="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title"
        android:background="@drawable/emotion_log_shape">

        <GridView

            android:id="@+id/choose_emotion_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="@integer/grid_columns"
            android:scrollbars="none"
            android:padding="@dimen/choose_emotion_gridview_padding" />

    </RelativeLayout>


</RelativeLayout>

